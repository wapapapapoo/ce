lexer grammar OperatorLexer;

/*
 * ---------- binding / arrow ----------
 */

OP_BIND
    : ':='
    ;

OP_ARROW
    : '=>'
    ;

/*
 * ---------- punctuation ----------
 */

LPAREN
    : '('
    ;

RPAREN
    : ')'
    ;

LBRACE
    : '{'
    ;

RBRACE
    : '}'
    ;

LBRACK
    : '['
    ;

RBRACK
    : ']'
    ;

COMMA
    : ','
    ;

COLON
    : ':'
    ;

SEMICOLON
    : ';'
    ;
